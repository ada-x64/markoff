<template>
    <property name="name" />
    <property name="slider_name" />
    <property name="text_name" />
    <property name="default_value" />
    <property name="initial_position">0</property>
    <property name="unit" />
    <property name="text" />
    <node
        border_color="#ffffff33"
        border="0 0 1px 0"
        display="flex"
        padding="0 12px"
        margin="0 8px"
        flex_direction="column"
        width="100%"
        tag:name="{name}"
    >
        <!-- title -->
        <node>
            <text font_size="12px">{text}</text>
        </node>
        <node display="flex" flex_direction="row"> <!-- INPUTS -->
            <!-- input text -->
            <node display="flex" flex_direction="row" margin="5px" width="33%">
                <button
                    target="text_value"
                    tag:filter="text"
                    background="#333"
                    border="2px"
                    border_color="#555"
                    active:border_color="#FFF"
                >
                    <text
                        id="text_value"
                        tag:name="{text_name}"
                        font_size="12px"
                    >{default_value}</text>
                    <text font_size="12px">{unit}</text>
                </button>
            </node>
            <!-- slider -->
            <node
                tag:name="{slider_name}"
                on_spawn="init_slider"
                on_change="notify_slider_update"
                tag:axis="x"
                tag:initial_position="{initial_position}"
                width="100%"
                background="#000"
                target="text_value"
                margin="0 5px"
            >
                <button
                    background="#FFF"
                    position="absolute"
                    width="10px"
                    height="10px"
                />
            </node>
        </node> <!-- END INPUTS -->
    </node>
</template>
